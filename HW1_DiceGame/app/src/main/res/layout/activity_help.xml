<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

    <TextView
        android:id="@+id/how_to_win"
        android:layout_margin="@dimen/help_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"/>

    <TextView
        android:id="@+id/how_to_play"
        android:layout_margin="@dimen/help_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"/>

    <Button
        android:id="@+id/play_button_from_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/help_margin"
        android:paddingHorizontal="@dimen/help_padding"
        android:text="@string/play" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/help_padding"
            android:text="@string/back" />

    </LinearLayout>
</RelativeLayout>